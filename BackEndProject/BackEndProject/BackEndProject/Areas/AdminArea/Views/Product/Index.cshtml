@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Products Table</h4>
                <a class="btn btn-success" asp-controller="Product" asp-action="create">Add Product</a>
                <br /> <br />
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>

                                <th>Name</th>
                                <th>Price</th>
                                <th>Discount</th>
                                <th>Count</th>
                                <th>Rating</th>
                                <th>CreatedDate</th>
                                <th>IsSpecialProduct</th>
                                <th>Image</th>
                                <th>CategoryId</th>
                                <th>Settings</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var products in Model)
                            {
                                <tr>
                                    <td>@products.Name</td>
                                    <td>@products.Price</td>
                                    <td>@products.Discount</td>
                                    <td>@products.Count</td>
                                    <td>@products.Rating</td>
                                    <td>@products.CreatedDate</td>

                                    <td>@products.Images</td>
                                    <td>@products.CategoryId</td>
                                    <td>

                                        <a class="btn btn-primary" asp-controller="Product" asp-action="update" asp-route-id="@products.Id">
                                            <i class="mdi mdi-tooltip-edit"></i>
                                        </a>
                                        <a class="btn btn-danger" asp-controller="Product" asp-action="delete" asp-route-id="@products.Id">
                                            <i class="mdi mdi-delete"></i>
                                        </a>


                                    </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <a class="btn btn-success" asp-controller="user" asp-action="create">
                    Add User
                </a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>FullName</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.FullName</td>
                                    <td>
                                        <a class="btn btn-warning" asp-controller="role" asp-action="update" asp-route-id="@item.Id">
                                            ChangeRole
                                        </a>
                                        <a class="btn btn-primary" asp-controller="user" asp-action="update" asp-route-id="@item.Id">
                                            <i class="mdi mdi-tooltip-edit"></i>
                                        </a>
                                        <a class="btn btn-danger" asp-controller="user" asp-action="delete" asp-route-id="@item.Id">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                        <a class="btn btn-success" asp-controller="user" asp-action="detail" asp-route-id="@item.Id">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


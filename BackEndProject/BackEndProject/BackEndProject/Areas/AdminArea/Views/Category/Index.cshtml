@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category Table</h4>
                <a class="btn btn-success" asp-controller="Category" asp-action="create">Add Category</a>
                <br /> <br />
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                
                                <th>Name</th>
                                <th>ParentId</th>
                                
                                <th>IsMain</th>
                                <th>Settings</th>

                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.ParentId</td>
                                    <td>@item.IsMain</td>
                                    <td>
                                        <img width="100" height="100" src="~/assets/images/@item.ImageUrl" />
                                    </td>
                                    <td>
                                       
                                        <a class="btn btn-primary" asp-controller="Category" asp-action="update" asp-route-id="@item.Id">
                                            <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                       @* <a class="btn btn-danger" asp-controller="Category" asp-action="delete" asp-route-id="@item.Id">
                                            <i class="mdi mdi-delete"></i>
                                         </a>*@

                                      <a>   <form asp-action="delete" asp-route-id="@item.Id">
                                            <input type="hidden" asp-for="@item.Id" value="@item.Id"/>
                                            <button class="btn btn-danger" type="submit">
                                                <i class="mdi mdi-delete"></i>
                                            </button>
                                        </form>

                                        </a>
                                    </td>

                                </tr>
                            }
                         
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

